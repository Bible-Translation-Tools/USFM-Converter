<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="USFMConverter.UI.Pages.OptionView"
             Name="OptionView">
    
    <UserControl.Styles>
        <Style Selector="TextBlock.Title">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style Selector="TextBlock.SubTitle">
            <Setter Property="Padding" Value="0 20 0 0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style Selector="Image.Icon">
            <Setter Property="Width" Value="18"></Setter>
            <Setter Property="Height" Value="18"></Setter>
        </Style>
        <Style Selector="Button.Cancel">
            <Setter Property="Background" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

    </UserControl.Styles>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Column="0" Background="#000000" Opacity="0.6"/>
        
        <Border Grid.Column="1" Background="White">
        
            <ScrollViewer Height="600" x:Name="ScrollViewer2" 
                          VerticalScrollBarVisibility="Visible" 
                          VerticalAlignment="Top" HorizontalAlignment="Stretch">

                <StackPanel Background="White" Margin="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Classes="Title">Project Settings</TextBlock>
                        <Border Grid.Column="1" BorderThickness="1" BorderBrush="LightGray" CornerRadius="5">
                            <Button Name="CloseBtn" Classes="Cancel" Padding="10 5">
                                <Image Width="16" Height="16" Source="../Assets/close.png"/>
                            </Button>
                        </Border>
                    </Grid>
                    
                    <TextBlock Classes="SubTitle">Content</TextBlock>
                    
                    <StackPanel>
                        <DockPanel Margin="15 0 0 0">
                            <Image Classes="Icon" Source="../Assets/font.png" />
                            <TextBlock VerticalAlignment="Center" Margin="10 20">Font Size</TextBlock>
                            <ComboBox HorizontalAlignment="Right" VerticalAlignment="Center" BorderBrush="LightGray"
                                      Margin="10 20" Width="150" VerticalContentAlignment="Center" BorderThickness="1">
                                <ComboBoxItem>Small</ComboBoxItem>
                                <ComboBoxItem>Normal</ComboBoxItem>
                                <ComboBoxItem>Large</ComboBoxItem>
                            </ComboBox>                         
                        </DockPanel>
                        
                        <DockPanel Margin="15 0 0 0">
                            <Image Classes="Icon" Source="../Assets/paragraph.png"></Image>
                            <TextBlock VerticalAlignment="Center" Margin="10 20">Text Direction</TextBlock>
                            <ComboBox HorizontalAlignment="Right" VerticalAlignment="Center" BorderBrush="LightGray"
                                      Margin="10 20" Width="150" VerticalContentAlignment="Center" BorderThickness="1">
                                <ComboBoxItem>Left to Right</ComboBoxItem>
                                <ComboBoxItem>Right to Left</ComboBoxItem>
                            </ComboBox>
                        </DockPanel>

                        <DockPanel Margin="15 0 0 0">
                            <Image Classes="Icon" Source="../Assets/line_space.png"/>
                            <TextBlock VerticalAlignment="Center" Margin="10 20" >Line Spacing</TextBlock>
                            <ComboBox HorizontalAlignment="Right" VerticalAlignment="Center" BorderBrush="LightGray"
                                      Margin="10 20" Width="150" VerticalContentAlignment="Center" BorderThickness="1">
                                <ComboBoxItem>Single Space</ComboBoxItem>
                                <ComboBoxItem>Double Space</ComboBoxItem>
                            </ComboBox>
                        </DockPanel>
                        
                        <DockPanel Margin="15 0 0 0">
                            <Image Classes="Icon" Source="../Assets/column.png"/>
                            <TextBlock VerticalAlignment="Center" Margin="10 20">Columns</TextBlock>
                            <ComboBox HorizontalAlignment="Right" VerticalAlignment="Center" BorderBrush="LightGray"
                                      Margin="10 20" Width="150" VerticalContentAlignment="Center" BorderThickness="1">
                                <ComboBoxItem>One Column</ComboBoxItem>
                                <ComboBoxItem>Two Column</ComboBoxItem>
                            </ComboBox>
                        </DockPanel>
                        
                        <DockPanel Margin="15 0 0 0">
                            <Image Classes="Icon" Source="../Assets/justify.png"/>
                            <TextBlock VerticalAlignment="Center" Margin="10 20">Justify Text</TextBlock>
                            <ToggleSwitch OnContent="" OffContent="" HorizontalAlignment="Right"></ToggleSwitch>
                        </DockPanel>
                    </StackPanel>
                    
                    <TextBlock Classes="SubTitle">Structure</TextBlock>

                    <StackPanel>

                        <DockPanel Margin="15 0 0 0">
                            <Image Classes="Icon" Source="../Assets/chapter.png"/>
                            <TextBlock VerticalAlignment="Center" Margin="10 20">Chapter Break</TextBlock>
                            <ToggleSwitch OnContent="" OffContent="" HorizontalAlignment="Right"></ToggleSwitch>
                        </DockPanel>
                        
                        <DockPanel Margin="15 0 0 0">
                            <Image Classes="Icon" Source="../Assets/verse.png"/>
                            <TextBlock VerticalAlignment="Center" Margin="10 20">Verse Break</TextBlock>
                            <ToggleSwitch OnContent="" OffContent="" HorizontalAlignment="Right"></ToggleSwitch>
                        </DockPanel>
                    </StackPanel>
                    
                    <TextBlock Classes="SubTitle">Options</TextBlock>
                        
                    <StackPanel>
                        <DockPanel Margin="15 0 0 0">
                            <Image Classes="Icon" Source="../Assets/note.png"/>
                            <TextBlock VerticalAlignment="Center" Margin="10 20">Note Taking</TextBlock>
                            <ToggleSwitch OnContent="" OffContent="" HorizontalAlignment="Right"></ToggleSwitch>
                        </DockPanel>
                        
                        <DockPanel Margin="15 0 0 0">
                            <Image Classes="Icon" Source="../Assets/table_of_content.png"/>
                            <TextBlock VerticalAlignment="Center" Margin="10 20">Table of Contents</TextBlock>
                            <ToggleSwitch OnContent="" OffContent="" HorizontalAlignment="Right"></ToggleSwitch>
                        </DockPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
